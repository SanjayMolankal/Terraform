{
  "compilerOptions": {
    "target": "ES2021",          // Or a newer version if necessary
    "module": "CommonJS",        // Use "CommonJS" for Node.js environment
    "outDir": "./dist",
    "rootDir": "./",
    "type" : "module",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node"]            // Specify types for Node.js
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}
